{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "format_version": {
      "type": "integer",
      "const": 3
    },
    "format_uuid": {
      "type": "string",
      "format": "uuid",
      "const": "289f771f-2c9a-4d73-9f3f-8492495a924d"
    },
    "packages": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "avatar_url": {
            "type": "string",
            "format": "uri"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "stars": {
            "type": "integer",
            "minimum": 0
          },
          "versions": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "required": [
          "name",
          "description",
          "tags",
          "avatar_url",
          "updated_at",
          "stars",
          "versions"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "packages"
  ],
  "additionalProperties": false
}